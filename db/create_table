CREATE TABLE users 
(
    id integer primary key autoincrement not null,
    username text unique not null, 
    password text not null, 
    date_create numeric null, 
    is_active numeric null
);

CREATE TABLE servers 
(
	id integer not null primary key autoincrement,
	name text not null unique,
	url text not null unique
);

CREATE TABLE routers 
(
    id integer not null primary key autoincrement, 
    server_id integer not null, 
    name text not null, 
    FOREIGN KEY(server_id) REFERENCES servers (id)
);

CREATE TABLE routers_statistics 
(
	id integer primary key autoincrement,
	route_id integer not null,
	date_request numeric not null,
	count_lastLaggy5s integer not null,
	count_lastLaggy10s integer not null,
	foreign key(route_id) references routers(id)
);